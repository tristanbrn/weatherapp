<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

   <% include head %>
  </head>


  <body>

    <nav class="navbar navbar-light">
        <div class="container">
            <a class="logo" href="/">
                <img src="/images/logo.png" width="100" height="100" class="logo" alt="">
            </a>
        </div>
    </nav>

            <div class="row form-container">

                <div class="container">

                    <form class="col-md-6 col-xs-12 form" action="add-city" method="GET">
                        <input id="autocomplete_search" type="text" name="city" placeholder="Où allons-nous ?" class="form-control mb-2" autocomplete="off">
                        <input type="submit" value="Ajouter" class="btn btn-primary" />
                    </form>

                </div>

            </div>
            
        <div class="row">
            <div class="col-md-5 col-xs-12 cities-container">

            <% if(errorBool === true) { %>
                <p class="error"><%= errorText %></p>
            <% } %>

            <% if(cityList.length == 0) { %>
                <div class="row">    
                    <p class="start">Saisissez votre première ville !</p>
                </div>
            <% } else { %>

                <% for(var i=0; i<cityList.length; i++) { %>

                 <div class="row city-element">
                    <div class="city-name"><%= cityList[i].name %></div>
                    <div class="city-temp">
                        <img alt="few clouds" src="//openweathermap.org/img/wn/<%= cityList[i].url %>.png" width="50" height="50">
                        <span class="city-weather"><%= cityList[i].weather %></span>
                        <span class="city-temp-min"><%= cityList[i].tempMin %>°c</span>
                        <span class="city-temp-max"><%= cityList[i].tempMax %>°c</span>
                    </div>
                    <a href="delete-city?name=<%= cityList[i].name %>"><img src="images/delete.png" width="20" height="20"></a>
                </div>

                <% } %>

            <% } %>
            </div>
        </div>
    </div>

    <script type="text/javascript"  src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyC5I3H1JtvXpwrHmIGcv_dnILxQS41p_6o"></script>
         
